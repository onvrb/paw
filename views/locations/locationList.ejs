<!DOCTYPE html>
<html>
  <head>
    <title>Location List</title>
  </head>
  <body>
    <div class="container">
      <h1>Location List</h1>
      <% if(locations.length>0) { %>
        <table class="list-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Id</th>
              <th>Location Name</th>
              <th>Address</th>
              <th>Capacity</th>
              <th>Detalhes</th>
              <th>Editar</th>
              <th>Eliminar</th>
            </tr>
          </thead>
          <tbody>

            <% for(var i=0; i<locations.length;i++) { %>
              <tr>
                <td> <%=i%> </td>
                <td> <%=locations[i]._id%></a></td>
                <td> <%=locations[i].name%></a></td>
                <td> <%=locations[i].address%></a></td>
                <td> <%=locations[i].capacity%></a></td>
                <td><a href="/locations/show/<%= locations[i]._id%> "> Ver </td>
                <td><a href="/locations/edit/<%= locations[i]._id%> "> Editar </a></td>
                <td><a href="/locations/delete/<%= locations[i]._id%> "> Eliminar </a></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      <% } else { %>
        <div>No locations found.</div>
      <% } %>
    </div>
    <h3><a href="/locations/create">Create a new Location</a></h3>
    <h3><a href="javascript: history.back()">Voltar atr√°s</a></h3>
  </body>
</html>